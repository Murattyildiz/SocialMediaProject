@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyMedya | Kayıt Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/frontend/assets/css/login.css">
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body>
    <video autoplay muted loop>
        <source src="~/frontend/assets/video/login_arka_plan.mp4" type="video/mp4">
        Tarayıcınız video elementini desteklemiyor.
    </video>
    <div class="container-sm">
        <div id="login" class="w-40 mx-auto position-absolute top-50 start-50 translate-middle">
            <form action="RegisterPost" method="post" class="px-4 pt-4 pb-3">
                <h1 class="text-center fw-lighter">MyMedya | Kayıt Ol</h1>

                <div class="input-group mt-2 mb-2">
                    <span class="input-group-text">Ad</span>
                    <input type="text" class="form-control" name="FirstName" required>
                </div>

                <div class="input-group mt-2 mb-2">
                    <span class="input-group-text">Soyad</span>
                    <input type="text" class="form-control" name="LastName" required>
                </div>

                <div class="input-group mt-2 mb-2">
                    <span class="input-group-text">E-posta Adresiniz</span>
                    <input type="email" class="form-control" name="Email" required>
                </div>

                <div class="input-group mt-2 mb-2">
                    <span class="input-group-text">Telefon</span>
                    <input type="tel" class="form-control" name="PhoneNumber" placeholder="555-555-5555" required>
                </div>

                <div class="input-group mt-2 mb-2">
                    <span class="input-group-text">Cinsiyet</span>
                    <select class="form-select" name="Gender" required>
                        <option value="" selected disabled>Seçiniz</option>
                        <option value="Male">Erkek</option>
                        <option value="Female">Kadın</option>
                        <option value="Other">Diğer</option>
                    </select>
                </div>

                <div class="input-group mt-2 mb-2">
                    <span class="input-group-text">Şifreniz</span>
                    <input type="password" class="form-control" name="Password" required>
                </div>

                <div class="input-group mt-2 mb-2">
                    <span class="input-group-text">Şifre Tekrar</span>
                    <input type="password" class="form-control" name="ConfirmPassword" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </div>
            </form>
            <div class="text-center pb-2">
                <a href="/giris-yap" class="btn btn-outline-primary">Hesabınız var mı? Giriş yapın</a>
            </div>

            <!-- Social Media Decorative Footer -->
            <div class="social-footer">
                <div class="social-dots">
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                </div>
            </div>
        </div>
    </div>
    <!-- Toast Notification -->
    <div class="toast-container position-top end-0 top-0 p-3">
        <div id="viewToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg bg-danger">
                <strong class="me-auto text-white">Hata</strong>
                <button type="button" class="btn-close color-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-bg-danger">
                @TempData["RegisterFail"]
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    @if (TempData["RegisterFail"] != null)
    {
        <script>
            $(document).ready(function () {
                $('.toast').toast({
                    animation: true,
                    delay: 6000
                });
                $('.toast').toast('show');
            });
        </script>
    }
</body>
</html> 