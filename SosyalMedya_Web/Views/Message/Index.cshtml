@model List<SosyalMedya_Web.Controllers.MessageUserListViewModel>
@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Mesajlar</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var user in Model)
                            {
                                <a href="/mesajlar/@user.UserId" class="list-group-item list-group-item-action @(user.UnreadMessageCount > 0 ? "bg-light" : "")">
                                    <div class="d-flex align-items-center">
                                        <img src="https://localhost:5190/@user.ImagePath" 
                                             class="rounded-circle me-3" 
                                             alt="@user.FullName" 
                                             width="50" height="50"
                                             onerror="this.src='https://localhost:5190/images/default.jpg'">
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">@user.FullName</h6>
                                                @if (!string.IsNullOrEmpty(user.LastMessageContent))
                                                {
                                                    <small class="text-muted">
                                                        @(user.LastMessageDate != DateTime.MinValue 
                                                            ? user.LastMessageDate.ToString("dd.MM.yyyy HH:mm") 
                                                            : "")
                                                    </small>
                                                }
                                            </div>
                                            @if (!string.IsNullOrEmpty(user.LastMessageContent))
                                            {
                                                <p class="mb-0 small text-truncate">@user.LastMessageContent</p>
                                            }
                                            else
                                            {
                                                <p class="mb-0 small text-muted">Henüz mesaj yok</p>
                                            }
                                        </div>
                                        @if (user.UnreadMessageCount > 0)
                                        {
                                            <span class="badge bg-primary rounded-pill ms-2">@user.UnreadMessageCount</span>
                                        }
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-chat-dots text-muted" style="font-size: 3rem;"></i>
                            <p class="mt-3 text-muted">Henüz hiç mesajınız yok.</p>
                            <p class="text-muted small">Bir kullanıcının profil sayfasına gidip "Mesaj Gönder" butonuna tıklayarak mesajlaşmaya başlayabilirsiniz.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 