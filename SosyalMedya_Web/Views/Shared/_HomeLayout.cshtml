@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sosyal Medya Projesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/frontend/assets/css/style.css">
    <link rel="stylesheet" href="~/frontend/assets/css/responsive.css">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.8/dist/sweetalert2.min.css">
    <style>
        /* Özel büyük boyutlu UI stilleri */
        body {
            font-size: 1.1rem;
        }

        /* Başlık çubuğu */
        #headMenu {
            padding: 1rem 0;
        }

            #headMenu a, .menu a {
                font-size: 1.2rem;
            }

            #headMenu img {
                width: 60px !important;
                height: 60px !important;
            }

        /* Sol menü */
        #leftSideMenu {
            width: 250px;
        }

            #leftSideMenu .border {
                padding: 1.5rem;
            }

            #leftSideMenu img {
                width: 80px !important;
                height: 80px !important;
            }

            #leftSideMenu h6 {
                font-size: 1.3rem;
                margin: 1rem 0;
            }

            #leftSideMenu .nav-link {
                padding: 0.8rem 1rem !important;
                margin: 0.5rem 0;
                font-size: 1.15rem;
            }

            #leftSideMenu .btn {
                padding: 0.7rem 1.2rem;
                font-size: 1.1rem;
                margin-top: 1rem;
            }

        /* İkonlar */
        .bi {
            font-size: 1.3rem;
            vertical-align: middle;
        }

        /* Butonlar */
        .btn {
            font-size: 1.1rem;
            padding: 0.6rem 1.1rem;
        }

        /* Yazı alanları */
        .form-control, .form-select {
            font-size: 1.1rem;
            padding: 0.6rem 0.75rem;
        }

        /* Toast bildirimleri */
        .toast {
            font-size: 1.1rem;
        }

     /*    /* Mobil uyumluluk */
     /*    @@media (max-width: 768px) {
            #leftSideMenu

        {
            width: 100%;
        }

        #headMenu img {
            width: 50px !important;
            height: 50px !important;
        }

        } */ */
    </style>
</head>
<body>
    <div class="container">

        <header class="py-3 mb-4 border-bottom">
            <div class="container d-flex flex-wrap justify-content-center">
                <a href="/" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto link-body-emphasis text-decoration-none">
                    <span class="fs-4">Sosyal Medya</span>
                </a>
                <div class="d-flex align-items-center">
                    <form class="me-3" action="/User/Users" method="get">
                        <input type="search" name="searchTerm" class="form-control" placeholder="Kullanıcı ara..." aria-label="Search">
                    </form>
                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@ViewData["CurrentUserImage"]" alt="mdo" width="32" height="32" class="rounded-circle">
                        </a>
                        <ul class="dropdown-menu text-small">
                            <li><a class="dropdown-item" href="/profilim">Profilim</a></li>
                            <li><a class="dropdown-item" href="/hesap-bilgilerim">Hesap Ayarları</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item logout-link" href="javascript:void(0)">Çıkış Yap</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <main class="d-flex justify-content-center justify-content-md-between">
            <div id="leftSideMenu" class="sticky-top col-2 justify-content-start h-50 py-1 px-1 text-center">
                <div class="border border-1 mb-4 mt-3 shadow h-auto">
                    <a class="d-inline-flex align-items-center link-body-emphasis text-decoration-none mt-2" href="/profilim">
                        <img src="@ViewData["CurrentUserImage"]" class="img-fluid img-thumbnail rounded-circle me-2" width="50" height="50" alt="">
                    </a>
                    <h6>@ViewData["CurrentUserName"]</h6>
                    <div class="align-items-center justify-content-center justify-content-md-between mb-5">
                        <a href="" class="col-6 border py-2 px-1 mb-5 float-start text-decoration-none"><i class="bi bi-substack me-2"></i>@ViewData["CurrentUserArticleCount"]</a>
                        @* <a href="" class="col-6 border py-2 px-1 mb-5 float-end text-decoration-none"><i class="bi bi-bell-fill me-2"></i>53</a> *@
                        @await Component.InvokeAsync("_NotSeenComment")
                    </div>
                </div>
                <ul class="nav menu d-inline col-12 col-md-auto mb-2 align-items-center justify-content-center mb-md-0">
                    <li class="nav-link text-black">
                        <a href="/" class="text-decoration-none">
                            <i class="bi bi-house-fill me-2"></i>Ana Sayfa
                        </a>
                    </li>
                    <li class="nav-link text-black my-2">
                        <a href="/profilim" class="text-decoration-none">
                            <i class="bi bi-person-circle me-2"></i>Profilim
                        </a>
                    </li>
                    <li class="nav-link text-black">
                        <a href="/mesajlar" class="text-decoration-none">
                            <i class="bi bi-chat-dots me-2"></i>Mesajlar
                        </a>
                    </li>
                    <li class="nav-link text-black">
                        <a href="/CodeShare" class="text-decoration-none">
                            <i class="bi bi-code-square me-2"></i>Kod Paylaşımları
                        </a>
                    </li>
                    <li class="nav-link text-black">
                        <a href="/hesap-bilgilerim" class="text-decoration-none">
                            <i class="bi bi-sliders2-vertical me-2"></i>Ayarlar
                        </a>
                    </li>

                    <a class="btn btn-outline-danger mt-3 logout-link" href="javascript:void(0)"><i class="bi bi-box-arrow-in-right me-2"></i>Çıkış Yap</a>

                </ul>
            </div>
            @RenderBody()
        </main>
    </div>
    <!-- First Toast -->
    <div class="toast-container position-top end-0 top-0 p-3">
        <!-- Second Toast -->
        <div id="viewToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg bg-success">
                <strong class="me-auto text-white">Giriş Başarılı</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-bg-success">
                Merhaba @TempData["Message"]
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="~/frontend/assets/js/responsive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.8/dist/sweetalert2.all.min.js"></script>
    <script>
        $('#summernote,#summernote1').summernote({
            placeholder: 'İnsanlarla birşeyler paylaşın',
            tabsize: 2,
            width: "100%",
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
    @if (TempData["Success"] != null && TempData["Success"] is bool success && success)
    {
        <script>
            $(document).ready(function () {
                $('.toast').toast({
                    animation: true,
                    delay: 3000
                });
                $('.toast').toast('show');
            });
        </script>
    }
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2();

            // Çıkış yap butonları için olay dinleyicisi
            $(".logout-link").on("click", function () {
                // Session ve cookie'leri temizle
                document.cookie = "activeMenu=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
                
                // Diğer tüm çerezleri temizle
                var cookies = document.cookie.split(";");
                for (var i = 0; i < cookies.length; i++) {
                    var cookie = cookies[i];
                    var eqPos = cookie.indexOf("=");
                    var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
                    document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT;path=/";
                }
                
                // Kullanıcıyı giriş sayfasına yönlendir
                window.location.href = "/giris-yap";
            });

            $(".nav-link").on("click", function () {
                let activeMenuText = $(this).find("a").text().trim();
                document.cookie = `activeMenu=${activeMenuText}`;

                $(".nav-link").removeClass("border border-1 border-primary");
                $(this).addClass("border border-1 border-primary");
            });

            function getCookie(cname) {
                var name = cname + "=";
                var decodedCookie = decodeURIComponent(document.cookie);
                var ca = decodedCookie.split(';');
                for (var i = 0; i < ca.length; i++) {
                    var c = ca[i];
                    while (c.charAt(0) == ' ') {
                        c = c.substring(1);
                    }
                    if (c.indexOf(name) == 0) {
                        return c.substring(name.length, c.length);
                    }
                }
                return "";
            }

            function setCookie(cname, exminutes) {
                var d = new Date();
                d.setTime(d.getTime() + (exminutes * 60 * 1000));
                var expiress = "expires=" + d.toGMTString();
                document.cookie = cname + "=" + getCookie("activeMenu") + ";" + expiress + ";path=/";
            }

            $(".nav-link").each(function () {
                if (getCookie("activeMenu")) {
                    var CookieOne = getCookie("activeMenu");
                    if ($(this).find("a").text().trim() == CookieOne) {
                        $(this).addClass("border border-1 border-primary");
                    }
                } else {
                    if ($(this).find("a").text().trim() == "Ana Sayfa") {
                        $(this).addClass("border border-1 border-primary");
                    }
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>