﻿@{
    Layout = null;
}

<!doctype html>
<html lang="tr" style="height: 100%;">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sosyal Medya Projesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/frontend/assets/css/style.css">
    <link rel="stylesheet" href="~/frontend/assets/css/responsive.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/profile.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
    <link rel="stylesheet" href="~/css/user.css" />
    <link rel="stylesheet" href="~/css/setting.css" />
    <link rel="stylesheet" href="~/css/message.css" />
    <link rel="stylesheet" href="~/css/comment.css" />
    <link rel="stylesheet" href="~/css/codeshare.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.8/dist/sweetalert2.min.css">
    @RenderSection("Styles", required: false)
    <style>
        /* Özel büyük boyutlu UI stilleri */
        html, body {
            height: 100%;
            min-height: 100%;
            overflow-y: auto !important;
            position: relative;
        }

        body {
            font-size: 1.1rem;
        }

        /* ChatBot Sabit Buton Stili */
        .floating-chatbot {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 1050;
        }

        .floating-chatbot a {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
        }

        .floating-chatbot a:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 12px rgba(0,0,0,0.3);
        }

        .floating-chatbot i {
            font-size: 24px;
        }

        /* Başlık çubuğu */
        #headMenu {
            padding: 1rem 0;
        }

            #headMenu a, .menu a {
                font-size: 1.2rem;
            }

            #headMenu img {
                width: 60px !important;
                height: 60px !important;
            }

        /* Sol menü */
        #leftSideMenu {
            width: 250px;
        }

            #leftSideMenu .border {
                padding: 1.5rem;
            }

            #leftSideMenu img {
                width: 80px !important;
                height: 80px !important;
            }

            #leftSideMenu h6 {
                font-size: 1.3rem;
                margin: 1rem 0;
            }

            #leftSideMenu .nav-link {
                padding: 0.8rem 1rem !important;
                margin: 0.5rem 0;
                font-size: 1.15rem;
            }

            #leftSideMenu .btn {
                padding: 0.7rem 1.2rem;
                font-size: 1.1rem;
                margin-top: 1rem;
            }

        /* İkonlar */
        .bi {
            font-size: 1.3rem;
            vertical-align: middle;
        }

        /* Butonlar */
        .btn {
            font-size: 1.1rem;
            padding: 0.6rem 1.1rem;
        }

        /* Yazı alanları */
        .form-control, .form-select {
            font-size: 1.1rem;
            padding: 0.6rem 0.75rem;
        }

        /* Toast bildirimleri */
        .toast {
            font-size: 1.1rem;
        }

        .container {
            min-height: 100%;
            position: relative;
            overflow-y: visible;
        }

        main {
            min-height: 100%;
            overflow-y: visible;
        }

        /*    /* Mobil uyumluluk */
        /*    @@media (max-width: 768px) {
                    #leftSideMenu

                {
                    width: 100%;
                }

                #headMenu img {
                    width: 50px !important;
                    height: 50px !important;
                }

                } */ */
    </style>
</head>
<body>
    <div class="container">

        <header class="py-3 mb-4 border-bottom">
            <div class="container d-flex flex-wrap justify-content-center">
                <a href="/" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto link-body-emphasis text-decoration-none">
                    <i class="bi bi-people-fill me-2 fs-3"></i>
                    <span class="fs-4">Sosyal Medya</span>
                </a>
                <div class="d-flex align-items-center">
                    <form class="me-3 search-form" action="/User/Users" method="get">
                        <div class="position-relative">
                            <i class="bi bi-search position-absolute search-icon"></i>
                            <input type="search" name="searchTerm" class="form-control" placeholder="Kullanıcı ara..." aria-label="Search">
                        </div>
                    </form>
                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@ViewData["CurrentUserImage"]" onerror="this.onerror=null; this.src='/images/default.jpg';" alt="mdo" width="32" height="32" class="rounded-circle">
                        </a>
                        <ul class="dropdown-menu text-small">
                            <li><a class="dropdown-item" href="/profilim"><i class="bi bi-person-circle me-2"></i>Profilim</a></li>
                            <li><a class="dropdown-item" href="/hesap-bilgilerim"><i class="bi bi-gear-fill me-2"></i>Hesap Ayarları</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item logout-link" href="javascript:void(0)"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <main class="d-flex justify-content-center justify-content-md-between">
            <div id="leftSideMenu" class="sticky-top col-2 justify-content-start h-50 py-1 px-1 text-center">
                <div class="border border-1 mb-4 mt-3 shadow h-auto">
                    <!-- Profile Header with Curved Bottom -->
                    <div class="profile-header">
                        <img src="@ViewData["CurrentUserImage"]" onerror="this.onerror=null; this.src='/images/default.jpg';" class="profile-pic" alt="@ViewData["CurrentUserName"]">
                    </div>
                    
                    <!-- User Info Section -->
                    <div class="user-info">
                        <h5>@ViewData["CurrentUserName"]</h5>
                        @if (ViewData["CurrentUserName"] != null)
                        {
                            <p>@@@(ViewData["CurrentUserName"].ToString().ToLower().Replace(" ", ""))</p>
                        }
                        else
                        {
                            <p>@@@("user")</p>
                        }
                    </div>
                    
                    <!-- User Stats Section -->
                    <div class="user-stats">
                        <div class="stat-box">
                            <i class="bi bi-file-text"></i>
                            <div class="count">@ViewData["CurrentUserArticleCount"]</div>
                            <div class="label">Yazılar</div>
                        </div>
                        @await Component.InvokeAsync("_NotSeenComment")
                    </div>
                    
                    <!-- Navigation Section -->
                    <div class="side-nav">
                        <div class="nav-item">
                            <a href="/" class="side-nav-link home-link">
                                <i class="bi bi-house-fill"></i> Ana Sayfa
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="/profilim" class="side-nav-link profile-link">
                                <i class="bi bi-person-circle"></i> Profilim
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="/mesajlar" class="side-nav-link messages-link">
                                <i class="bi bi-chat-dots"></i> Mesajlar
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="/CodeShare" class="side-nav-link code-link">
                                <i class="bi bi-code-square"></i> Kod Paylaşımları
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="/hesap-bilgilerim" class="side-nav-link settings-link">
                                <i class="bi bi-sliders2-vertical"></i> Ayarlar
                            </a>
                        </div>
                    </div>
                    
                    <!-- Logout Button -->
                    <div class="logout-btn">
                        <button class="btn-logout logout-link" type="button">
                            <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                        </button>
                    </div>
                </div>
            </div>
            @RenderBody()
        </main>
        
        <!-- Sabit ChatBot Butonu -->
        <div class="floating-chatbot">
            <a href="/ChatBot" class="btn btn-primary rounded-circle" title="Bingöl Üniversitesi ChatBot">
                <i class="bi bi-robot"></i>
            </a>
        </div>
        
    </div>
    <!-- First Toast -->
    <div class="toast-container position-top end-0 top-0 p-3">
        <!-- Second Toast -->
        <div id="viewToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg bg-success">
                <strong class="me-auto text-white">Giriş Başarılı</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-bg-success">
                Merhaba @TempData["Message"]
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="~/frontend/assets/js/responsive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.8/dist/sweetalert2.all.min.js"></script>
    <script>
        $('#summernote,#summernote1').summernote({
            placeholder: 'İnsanlarla birşeyler paylaşın',
            tabsize: 2,
            width: "100%",
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
    @if (TempData["Success"] != null && TempData["Success"] is bool success && success)
    {
        <script>
            $(document).ready(function () {
                $('.toast').toast({
                    animation: true,
                    delay: 3000
                });
                $('.toast').toast('show');
            });
        </script>
    }
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2({
                placeholder: "Konu seçin...",
                allowClear: true,
                width: '100%',
                theme: "classic"
            });

            // Çıkış yap butonları için olay dinleyicisi
            $(".logout-link").on("click", function () {
                // Session ve cookie'leri temizle
                document.cookie = "activeMenu=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";

                // Diğer tüm çerezleri temizle
                var cookies = document.cookie.split(";");
                for (var i = 0; i < cookies.length; i++) {
                    var cookie = cookies[i];
                    var eqPos = cookie.indexOf("=");
                    var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
                    document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT;path=/";
                }

                // Kullanıcıyı giriş sayfasına yönlendir
                window.location.href = "/giris-yap";
            });

            // Active menu handling for new sidebar
            $(".side-nav-link").on("click", function () {
                let activeMenuText = $(this).text().trim();
                document.cookie = `activeMenu=${activeMenuText}`;
            });

            function getCookie(cname) {
                var name = cname + "=";
                var decodedCookie = decodeURIComponent(document.cookie);
                var ca = decodedCookie.split(';');
                for (var i = 0; i < ca.length; i++) {
                    var c = ca[i];
                    while (c.charAt(0) == ' ') {
                        c = c.substring(1);
                    }
                    if (c.indexOf(name) == 0) {
                        return c.substring(name.length, c.length);
                    }
                }
                return "";
            }

            // Set active menu
            function setActiveMenu() {
                // First check cookie
                if (getCookie("activeMenu")) {
                    var activeMenu = getCookie("activeMenu");
                    $(".side-nav-link").each(function() {
                        if ($(this).text().trim() === activeMenu) {
                            $(this).addClass("active");
                        }
                    });
                } else {
                    // Default to current page based on URL
                    var path = window.location.pathname;
                    
                    if (path === "/") {
                        $(".home-link").addClass("active");
                    } else if (path.includes("/profilim")) {
                        $(".profile-link").addClass("active");
                    } else if (path.includes("/mesajlar")) {
                        $(".messages-link").addClass("active");
                    } else if (path.includes("/CodeShare")) {
                        $(".code-link").addClass("active");
                    } else if (path.includes("/hesap-bilgilerim")) {
                        $(".settings-link").addClass("active");
                    }
                }
            }
            
            // Call setActiveMenu on page load
            setActiveMenu();
            
            // Fix z-index issues for Select2 and modal windows
            $('.js-example-basic-single').on('select2:open', function() {
                $('.select2-dropdown').css('z-index', 9999);
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>